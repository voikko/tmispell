  <!ENTITY dhdate      "<date>august  26, 2002</date>">
  <!-- SECTION should be 1-8, maybe w/ subsection other parameters are
       allowed: see man(7), man(1). -->
  <!ENTITY dhsection   "<manvolnum>1</manvolnum>">
  <!ENTITY dhemail     "<email>pauli.virtanen@hut.fi</email>">
  <!ENTITY dhusername  "Pauli Virtanen">
  <!ENTITY dhucpackage "<refentrytitle>TMISPELL</refentrytitle>">

  <!ENTITY tmispell-description SYSTEM "tmispell.description.ent">
  <!ENTITY tmispell-configfile SYSTEM "tmispell.configfile.ent">
  <!ENTITY tmispell-configfile-example SYSTEM "tmispell.configfile-example.ent">
]>

<refentry>
  <refentryinfo>
    <address>&dhemail;</address>
    <author>&dhfirstname; &dhsurname;</author>
    <copyright>
      <year>2002-2003</year>
      <holder>&dhusername;</holder>
    </copyright>
    &dhdate;
  </refentryinfo>
  
  <refmeta>&dhucpackage; &dhsection;</refmeta>

  <refnamediv>
    <refname>tmispell</refname>
    <refpurpose>
      An Ispell compatible front end for the spell checking module Soikko.
    </refpurpose>
  </refnamediv>
  
  <refsynopsisdiv>
    <cmdsynopsis>
      <command>tmispell</command>
      <arg><option>-F</option> <replaceable>configfile</replaceable></arg>
      <arg><replaceable>Ispell options</replaceable></arg>
      <arg choice="opt" rep="repeat"><replaceable>files</replaceable></arg>
    </cmdsynopsis>
  </refsynopsisdiv>

  <refsect1>
    <title>DESCRIPTION</title>
    &tmispell-description;
  </refsect1>

  <refsect1>
    <title>OPTIONS</title>
    <para>Tmispell understands the following options:</para>
    <variablelist>
      <varlistentry>
	<term><option>-F <replaceable>configfile</replaceable></option></term>
	<listitem>
	  <para>Read the configuration file
	    <replaceable>configfile</replaceable> instead of the
	    default configuration file <filename>@CONFIG_FILE@</filename>.
	  </para>
	</listitem>
      </varlistentry>
      <varlistentry>
	<term><option><replaceable>Ispell options</replaceable></option></term>
	<listitem>
	  <para>Tmispell should understand all options that Ispell
	    does. For more information about them, see ispell(1).</para>
	</listitem>
      </varlistentry>
    </variablelist>
  </refsect1>

  <refsect1>
    <title>FILES</title>
    
    <variablelist>
      <varlistentry>
	<term><filename>@CONFIG_FILE@</filename></term>
	<listitem>
	  <para>
	    The configuration file for Tmispell.
	  </para>
	  &tmispell-configfile;
	</listitem>
      </varlistentry>
    </variablelist>
  </refsect1>

  <refsect1>
    <title>EXAMPLES</title>
    &tmispell-configfile-example;
  </refsect1>

  <refsect1>
    <title>SEE ALSO</title>
    <para>ispell(1)</para>
    <para>
      <ulink url="http://www.iki.fi/~pry/soikko/">Soikko</ulink>, by Pasi Ryhänen.
    </para>
  </refsect1>

  <refsect1>
    <title>AUTHOR</title>
    <para>&dhusername; &dhemail;</para>
  </refsect1>
</refentry>

